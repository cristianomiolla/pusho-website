<style is:global>
  .legal-page {
    padding: 60px 0 100px;
  }

  .legal-header {
    margin-bottom: 48px;
  }

  .legal-tag {
    display: inline-block;
    background: rgba(var(--color-accent-rgb), 0.4);
    color: var(--color-text);
    padding: 6px 16px;
    border-radius: var(--radius-lg);
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .legal-header h1 {
    font-size: 2.75rem;
    font-weight: 800;
    margin-bottom: 8px;
    letter-spacing: -0.02em;
  }

  .last-updated {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
  }

  .legal-content {
    background: var(--color-bg-card);
    border-radius: var(--radius-lg);
    padding: 48px;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-card);
  }

  .intro {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  section {
    margin-bottom: 40px;
  }

  section:last-child {
    margin-bottom: 0;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--color-text);
  }

  h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 24px 0 12px;
    color: var(--color-text);
  }

  p {
    color: var(--color-text-secondary);
    margin-bottom: 16px;
    line-height: 1.7;
  }

  ul {
    margin-left: 24px;
    margin-bottom: 16px;
    color: var(--color-text-secondary);
  }

  li {
    margin-bottom: 8px;
    line-height: 1.6;
  }

  li strong {
    color: var(--color-text);
  }

  .warning-box {
    background: rgba(255, 193, 7, 0.1);
    border: 1px solid rgba(255, 193, 7, 0.3);
    border-radius: var(--radius-md);
    padding: 20px 24px;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 16px 0;
  }

  .warning-box strong {
    color: #B8860B;
  }

  .warning-box ul {
    margin-top: 12px;
    margin-bottom: 12px;
  }

  .warning-box p {
    margin-bottom: 0;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--color-bg-dark);
    color: var(--color-accent);
    padding: 12px 24px;
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .contact-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  a {
    color: var(--color-accent);
  }

  .footer-note {
    background: rgba(var(--color-accent-rgb), 0.1);
    border-radius: var(--radius-md);
    padding: 20px 24px;
    text-align: center;
  }

  .footer-note p {
    margin-bottom: 0;
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .legal-page {
      padding: 40px 0 60px;
    }

    .legal-header h1 {
      font-size: 2rem;
    }

    .legal-content {
      padding: 32px 24px;
    }

    h2 {
      font-size: 1.25rem;
    }
  }
</style>
